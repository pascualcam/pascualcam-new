---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/sections/Sidebar";
---

<Layout
  title="Notes - Pascual Camacho"
  description="Notes and thoughts on technology and development"
>
  <Sidebar slot="sidebar" client:load />

  <main class="min-h-screen py-20">
    <div class="max-w-4xl mx-auto px-6">
      <div class="mb-16">
        <h1
          class="text-4xl font-medium text-primary-900 dark:text-primary-100 mb-6"
        >
          Notes
        </h1>
        <p class="text-xl text-primary-700 dark:text-primary-300">
          Thoughts, ideas, and learnings
        </p>
      </div>

      <div class="space-y-12">
        <section>
          <h2
            class="text-2xl font-medium text-primary-900 dark:text-primary-100 mb-6"
          >
            Coming Soon
          </h2>
          <div
            class="border border-primary-200 dark:border-primary-800 rounded-lg p-8 text-center"
          >
            <p class="text-primary-600 dark:text-primary-400 mb-4">
              This section will contain notes about technology, development, and
              other interesting topics.
            </p>
            <p class="text-primary-500 dark:text-primary-500 text-sm">
              In development...
            </p>
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>
